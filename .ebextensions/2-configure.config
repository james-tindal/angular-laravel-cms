option_settings:
  aws:elasticbeanstalk:container:php:phpini:
    document_root: /public
  aws:rds:dbinstance:
    DBUser: ebroot
    DBPass:
      Fn::GetOptionSetting:
        Namespace: aws:elasticbeanstalk:application:environment
        OptionName: DB_PASSWORD

container_commands:
  1-init-db:
    command: "php artisan migrate --env=production; php artisan db:seed"
